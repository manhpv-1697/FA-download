<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        >

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1"
            >

            <TableRow
                >

                <TextView
                    android:id="@+id/tvURLCaption"

                    android:layout_marginEnd="8dp"
                    android:labelFor="@+id/etURL"
                    android:text="@string/flashair_url"

                    />

                <EditText
                    android:id="@+id/etURL"
                    android:layout_span="2"

                    android:inputType="textUri"
                    />

                <Button
                    android:id="@+id/btnFlashAirURLHelp"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_marginStart="8dp"
                    android:minWidth="32dp"
                    android:text="@string/question"
                    />

            </TableRow>

            <TableRow
                android:layout_marginTop="8dp"
                >

                <TextView
                    android:id="@+id/tvFolderCaption"

                    android:layout_marginEnd="8dp"
                    android:text="@string/local_folder"
                    />


                <TextView
                    android:id="@+id/tvFolder"

                    android:ellipsize="start"
                    />

                <Button
                    android:id="@+id/btnFolderPicker"
                    android:minWidth="32dp"
                    android:text="@string/dotdotdot"
                    />

                <Button
                    android:id="@+id/btnFolderPickerHelp"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_marginStart="8dp"
                    android:minWidth="32dp"
                    android:text="@string/question"
                    />

            </TableRow>

            <TableRow
                android:layout_marginTop="8dp"
                >


                <TextView
                    android:id="@+id/tvIntervalCaption"

                    android:layout_marginEnd="8dp"
                    android:labelFor="@+id/etInterval"
                    android:text="@string/repeat_interval"

                    />


                <EditText
                    android:id="@+id/etInterval"
                    android:layout_span="2"

                    android:inputType="number"
                    />

                <Button
                    android:id="@+id/btnIntervalHelp"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_marginStart="8dp"
                    android:minWidth="32dp"
                    android:text="@string/question"
                    />
            </TableRow>

            <TableRow
                android:layout_marginTop="8dp"
                >

                <TextView
                    android:id="@+id/tvFileTypeCaption"

                    android:layout_marginEnd="8dp"
                    android:labelFor="@+id/etFileType"
                    android:text="@string/file_type_caption"
                    />


                <EditText
                    android:id="@+id/etFileType"
                    android:layout_span="2"

                    android:inputType="text"

                    />

                <Button
                    android:id="@+id/btnFileTypeHelp"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_marginStart="8dp"
                    android:minWidth="32dp"
                    android:text="@string/question"
                    />
            </TableRow>
        </TableLayout>
    </FrameLayout>
</ScrollView>