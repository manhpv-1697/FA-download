<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"

        >

        <TextView
            android:id="@+id/tvURLCaption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/etURL"
            android:layout_alignParentStart="true"

            android:labelFor="@+id/etURL"
            android:text="@string/flashair_url"

            />

        <Button
            android:id="@+id/btnFlashAirURLHelp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/etURL"
            android:layout_alignParentEnd="true"
            android:minWidth="48dp"
            android:text="@string/question"
            />

        <EditText
            android:id="@+id/etURL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/tvURLCaption"
            android:layout_toStartOf="@+id/btnFlashAirURLHelp"

            android:inputType="textUri"
            />

        <TextView
            android:id="@+id/tvFolderCaption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/btnFolderPicker"
            android:layout_alignParentStart="true"

            android:text="@string/local_folder"
            />

        <Button
            android:id="@+id/btnFolderPickerHelp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/btnFlashAirURLHelp"
            android:layout_marginTop="8dp"
            android:minWidth="48dp"
            android:text="@string/question"
            />

        <Button
            android:id="@+id/btnFolderPicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/btnFolderPickerHelp"
            android:layout_toStartOf="@+id/btnFolderPickerHelp"
            android:minWidth="48dp"
            android:text="@string/dotdotdot"
            />

        <TextView
            android:id="@+id/tvFolder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_alignBaseline="@+id/btnFolderPickerHelp"

            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"

            android:layout_toEndOf="@+id/tvFolderCaption"
            android:layout_toStartOf="@+id/btnFolderPicker"
            android:ellipsize="start"
            />


        <TextView
            android:id="@+id/tvIntervalCaption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/etInterval"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"

            android:labelFor="@+id/etInterval"
            android:text="@string/repeat_interval"

            />

        <Button
            android:id="@+id/btnIntervalHelp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/btnFolderPickerHelp"
            android:layout_marginTop="8dp"
            android:minWidth="48dp"
            android:text="@string/question"
            />

        <EditText
            android:id="@+id/etInterval"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/btnIntervalHelp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/tvIntervalCaption"
            android:layout_toStartOf="@+id/btnIntervalHelp"

            android:inputType="number"
            />


        <TextView
            android:id="@+id/tvFileTypeCaption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/etFileType"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"

            android:labelFor="@+id/etFileType"
            android:text="@string/file_type_caption"
            />

        <Button
            android:id="@+id/btnFileTypeHelp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/btnIntervalHelp"
            android:layout_marginTop="8dp"
            android:minWidth="48dp"
            android:text="@string/question"
            />

        <EditText
            android:id="@+id/etFileType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/btnFileTypeHelp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/tvFileTypeCaption"
            android:layout_toStartOf="@+id/btnFileTypeHelp"

            android:inputType="text"

            />

        <TextView
            android:id="@+id/tvFileTypeDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/etFileType"
            android:layout_alignStart="@id/etFileType"
            android:layout_below="@id/etFileType"
            android:text="@string/file_type_desc"
            />
    </RelativeLayout>
</ScrollView>